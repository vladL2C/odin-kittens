<section>
<%= form_for(@kitten, url: yield(:path)) do |f| %>
  <%= render 'errors', object: f.object %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :cuteness %>
  <%= f.number_field :cuteness %>

  <%= f.label :softness %>
  <%= f.number_field :softness %>

  <%= f.submit yield(:button_text) %>
  <% end %>
</section>  




  